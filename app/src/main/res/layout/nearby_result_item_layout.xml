<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fooditem">

            <TextView
                android:id="@+id/nearbyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:text="Name"
                android:textColor="#0f65c1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nearbyAddress"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="60dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="Address"
                android:textColor="#1f932e"
                android:textSize="20sp" />


            <ProgressBar

                android:id="@+id/nearbyProgress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="visible" />
            <!--progress bar makes loading circle -->

            <ImageView

                android:id="@+id/nearbyImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/noimage" />

            <TextView
                android:id="@+id/nearbyLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="260dp"
                android:padding="5dp"
                android:text="latitude"
                android:textColor="#c43a08"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nearbyLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="290dp"
                android:padding="5dp"
                android:text="longitude"
                android:textColor="#c43a08"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nearDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="320dp"
                android:padding="5dp"
                android:text="distance"
                android:textColor="#c40834"
                android:textSize="20dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>




